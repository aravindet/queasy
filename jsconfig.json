{
    "compilerOptions": {
        "checkJs": true,
        "strict": true,
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "lib": ["ES2022"]
    },
    "include": ["src/**/*.js"]
}
